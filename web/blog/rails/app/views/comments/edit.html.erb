<h1>Editing comment</h1>

<% form_for([@article, @comment]) do |f| %>
  <p>
    <%= f.label :commenter %> <br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %> <br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', article_comment_path(@article, @comment) %> |
<%= link_to 'Back', article_comments_path(@article) %>
