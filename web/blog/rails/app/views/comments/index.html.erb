
<table>
<tr>
  <th>Commenter</th>
  <th>Body</th>
</tr>
<% for comment in @comments %>
  <tr>
    <td><%=h comment.commenter %></td>
    <td><%= link_to 'Show', article_comment_path(@article, comment) %></td>
    <td>
      <%= link_to 'Destory', article_comment_path(@article, comment),
          :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New comment', new_article_comment_path(@article) %>
