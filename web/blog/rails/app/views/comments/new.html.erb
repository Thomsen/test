
<h2>Add a comment: </h2>
<%= form_for([@article, @comment]) do |f| %>

  <p>
    <%= f.label :commenter %> <br />
    <%= f.text_field :commenter %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  
  <p>
    <%= f.submit "Create" %>
  </p>

<% end %>

<%= link_to 'Back', article_comments_path(@article) %>
